<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
    http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="ApadrinhamentoPU">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<jta-data-source>java:jboss/datasources/APADRINHAMENTO_DB</jta-data-source>

		<class>br.com.atendimento.entidades.Padrinho</class>
		<class>br.com.atendimento.entidades.Crianca</class>
		<class>br.com.atendimento.entidades.Contato</class>
		<class>br.com.atendimento.entidades.Doacao</class>
		<class>br.com.atendimento.entidades.Endereco</class>
		<class>br.com.atendimento.entidades.DebitoAutomatico</class>
		<class>br.com.atendimento.entidades.DebitoCartao</class>
		

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>

