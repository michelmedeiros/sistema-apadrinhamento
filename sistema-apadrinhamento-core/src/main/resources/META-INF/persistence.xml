<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
 
    <persistence-unit name="ApadrinhamentoPU" transaction-type="RESOURCE_LOCAL">
 
        <!-- Ao invés de utilizar o seguinte provider, como de costume: -->
        <!-- <provider>org.hibernate.ejb.HibernatePersistence</provider> -->
        <!-- Vamos usar o provider abaixo: -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
 
        <!-- Não se esqueça de informar ao persistence.xml qual datasource você estará usando, para isso siga o exemplo abaixo: -->
        <jta-data-source>java:jboss/datasources/apadrinhamento-ds</jta-data-source>
        <!-- Obs.: Caso seja necessário você rodar uma classe main para popular o banco de dados, remova a tag acima.--> 
 
 		<class>br.com.apadrinhamento.entities.Apadrinhamento</class>
		<class>br.com.apadrinhamento.entities.Padrinho</class>
		<class>br.com.apadrinhamento.entities.Crianca</class>
		<class>br.com.apadrinhamento.entities.Contato</class>
		<class>br.com.apadrinhamento.entities.Doacao</class>
		<class>br.com.apadrinhamento.entities.Endereco</class>
		<class>br.com.apadrinhamento.entities.DebitoAutomatico</class>
		<class>br.com.apadrinhamento.entities.DebitoCartao</class>
 
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
        </properties>
    </persistence-unit>
</persistence>
